{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() ~ ' - ' ~ article.title|lower }}
{% endblock %}

{% block body_id 'blog_post_show' %}

{% block main %}
    <h1>{{ article.title }}</h1>
    <p class="post-metadata">
        <span class="metadata"><i class="fa fa-link"></i> {{ article.slug }}</span>
    </p>
    {{ article.content }}
{% endblock %}
